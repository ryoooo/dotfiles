#!/usr/bin/env bash
#MISE description="グローバル npm パッケージをインストール"

set -e

echo "=== npm グローバルパッケージをインストール ==="

# pnpm グローバルディレクトリのセットアップ
export PNPM_HOME="${PNPM_HOME:-$HOME/.local/share/pnpm}"
mkdir -p "$PNPM_HOME"
export PATH="$PNPM_HOME:$PATH"

pnpm add -g \
  pyright \
  typescript \
  typescript-language-server
