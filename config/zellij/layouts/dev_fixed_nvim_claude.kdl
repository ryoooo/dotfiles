layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }

    tab name="dev" focus=true {
        pane split_direction="vertical" {
            pane size="30%" split_direction="horizontal" {
                pane name="yazi" command="yazi"
                pane name="git" command="lazygit"
            }
            pane size="30%" split_direction="horizontal" {
                pane size="75%" name="nvim" command="bash" {
                    args "-lc" "nvim"
                }
                pane size="25%" name="terminal" command="bash" {
                    args "-l"
                }
            }
            pane name="claude" command="bash" {
                args "-lc" "claude"
            }
        }
    }
}
